package simulator.view;

import java.util.Iterator;
import java.util.List;

import simulator.control.Controler;
import simulator.model.Animal.Diet;
import simulator.model.AnimalInfo;
import simulator.model.EcoSysObserver;
import simulator.model.MapInfo;
import simulator.model.MapInfo.RegionData;
import simulator.model.RegionInfo;

public class ChivatoCarnivoros implements EcoSysObserver{
	Integer[][] pasosConMasDeDosCarnivoros;
	Controler ctrl;
	public ChivatoCarnivoros(Controler ctrl) {
		ctrl.addObserver(this);
		
		
	}

	@Override
	public void onRegister(double time, MapInfo map, List<AnimalInfo> animals) {
		// TODO Auto-generated method stub
		pasosConMasDeDosCarnivoros =new Integer[map.get_rows()][map.get_cols()];
	}

	@Override
	public void onReset(double time, MapInfo map, List<AnimalInfo> animals) {
		// TODO Auto-generated method stub
		pasosConMasDeDosCarnivoros =new Integer[map.get_rows()][map.get_cols()];
	}

	@Override
	public void onAnimalAdded(double time, MapInfo map, List<AnimalInfo> animals, AnimalInfo a) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void onRegionSet(int row, int col, MapInfo map, RegionInfo r) {
		// TODO Auto-generated method stub
		pasosConMasDeDosCarnivoros =new Integer[map.get_rows()][map.get_cols()];
	}

	@Override
	public void onAvanced(double time, MapInfo map, List<AnimalInfo> animals, double dt) {
		// TODO Auto-generated method stub
		Iterator<MapInfo.RegionData> it=map.iterator();
		RegionData r;
		while(it.hasNext()) {
			r=it.next();
			if(r.r().getAnimalsInfo().stream().filter((a)->a.get_diet()==Diet.CARNIVORE).count()>1) {
				if(pasosConMasDeDosCarnivoros[r.row()][r.col()]==null)
					pasosConMasDeDosCarnivoros[r.row()][r.col()]=0;
				else				
				pasosConMasDeDosCarnivoros[r.row()][r.col()]+=1;}
		}
		
	}
	public void getSolucion() {
		for(int i=0;i<pasosConMasDeDosCarnivoros.length;i++)
			for(int j=0;j<pasosConMasDeDosCarnivoros[0].length;j++)
				if(pasosConMasDeDosCarnivoros[i][j]!=null && pasosConMasDeDosCarnivoros[i][j]>1) {
					System.out.println("Region" + i+ " "+j +":");
					System.out.println(pasosConMasDeDosCarnivoros[i][j]);}
	}

}
